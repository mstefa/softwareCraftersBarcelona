---
import StarIcon from './StarIcon.astro';

export interface Props {
  title: string;
  subtitle: string;
}

const { title, subtitle } = Astro.props;
---

<div class="flex mt-4 items-center my-4">
  <StarIcon color="fill-accent-blue" size="h-14 w-14" />
  <div class="mt-4 items-center">
    <!-- <StarIcon color="fill-accent-blue" /> -->
    <h2 class="text-4xl text-text font-heading mx-3">{title}</h2>
    <p class="text-2xl text-gray-700 font-heading mx-3">{subtitle}</p>
  </div>
</div>
