---
export interface Props {
  text: string;
  href: string;
}

const { href, text } = Astro.props;
---

<a
  class="border-accent-blue text-3xl border-2 text-accent-blue hover:bg-accent-blue hover:text-gray-50 hover:border-transparent mr-7 ml-7 font-bold py-2 px-4 rounded animate-flipInY transition duration-300 ease-in-out"
  href={href}
  data-animation-delay="166000"
>
  {text}
</a>
