---
import LanguagePicker from '../components/molecules/LanguagePicker.astro';
import { getLangFromUrl } from '../i18n/utils';
interface Props {
  title: string;
}
const lang = getLangFromUrl(Astro.url);

const { title } = Astro.props;
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
    <footer>
      <LanguagePicker />
    </footer>
  </body>
</html>
<style is:global>
  @import url('https://fonts.googleapis.com/css2?family=Barlow+Condensed:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap');
  @import url('https://fonts.googleapis.com/css2?family=Barlow+Condensed:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Raleway:ital,wght@0,100..900;1,100..900&display=swap');

  :root {
    --color-background: 255, 255, 255; /* FFFFFF */
    --color-text: 46, 64, 87; /* 2E4057 */
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--color-accent-yellow)),
      rgb(var(--color-accent-blue)) 30%,
      white 60%
    );
    --image-gradient: linear-gradient(
      45deg,
      rgb(var(--color-accent-yellow), 0.85),
      rgb(var(--color-accent-blue), 0.85)
    );
  }

  @keyframes flipInY {
    from {
      transform: rotateY(60deg);
      opacity: 0;
      /* animation-timing-function: ease-in; */
    }
    40% {
      transform: rotateY(-10deg);
      /* animation-timing-function: ease-in; */
    }
    70% {
      transform: rotateY(10deg);
    }
    100% {
      transform: rotateY(0deg);
      animation-timing-function: ease-out;
      opacity: 1;
    }
  }

  .animate-flipInY {
    animation-name: flipInY;
    animation-duration: 1s;
    animation-fill-mode: forwards;
    animation-timing-function: ease-out;
  }
</style>
